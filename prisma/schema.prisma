// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("POSTGRES_PRISMA_URL2") // uses connection pooling
  //directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id Int @id @default(autoincrement())
  nome String
  sobrenome String
  email String? @unique
  senha String?
  parties UserParty[] @relation("UserToUserParty")
  ownedParties Party[]
  secretFriends UserParty[] @relation("SecretFriendToUserParty")
}

model Party {
  id Int @id @default(autoincrement())
  NomeGrupo String?
  Tag String? @unique
  quantidadePessoa Int 
  ownerId Int
  owner User @relation(fields: [ownerId], references: [id])
  users UserParty[]
}

model UserParty {
  userId Int
  partyId Int
  secretFriendId Int?
  status String @default("PENDING")
  user User @relation("UserToUserParty", fields: [userId], references: [id])
  party Party @relation(fields: [partyId], references: [id])
  secretFriend User? @relation("SecretFriendToUserParty", fields: [secretFriendId], references: [id])

  @@id([userId, partyId])
}
